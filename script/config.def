# sudo を使う場合は以下を有効にすること
#%define	sudo	sudo

# ソースをダウンロードする fallback URL
%define	fallback_url	http://xqt.sourceforge.jp/distfiles/

# コンパイラ類の指定
%define tool_path	/opt/Embedix/tools

%env CC		%{tool_path}/bin/arm-linux-gcc
%env CXX	%{tool_path}/bin/arm-linux-g++
%env LD		%{tool_path}/bin/arm-linux-ld
%env AR		%{tool_path}/bin/arm-linux-ar
%env AS		%{tool_path}/bin/arm-linux-as
%env RANLIB	%{tool_path}/bin/arm-linux-ranlib
%env STRIP	%{tool_path}/bin/arm-linux-strip
%env AS		%{tool_path}/bin/arm-linux-as

%env CC_FOR_BUILD	gcc
%env HOST_CC		gcc

# パス指定
%define prefix		/opt/QtPalmtop

%define	cross_prefix	%{tool_path}/arm-linux
%define	x_prefix	%{cross_prefix}

%env PKG_CONFIG_PATH	%{cross_prefix}/lib/pkgconfig
%env CONFIG_SITE	%{scriptdir}/zaurus-config.site

# *-config コマンドパス
%env FREETYPE_CONFIG	%{cross_prefix}/bin/freetype-config
%env FT2_CONFIG		%{cross_prefix}/bin/freetype-config
%env GLIB_CONFIG        %{cross_prefix}/bin/glib-config
%env GTK_CONFIG         %{cross_prefix}/bin/gtk-config
%env IMLIB_CONFIG       %{cross_prefix}/bin/imlib-config
%env XML2_CONFIG        %{cross_prefix}/bin/xml2-config
%env XML_CONFIG         %{cross_prefix}/bin/xml2-config
%env XFT_CONFIG         %{x_prefix}/bin/xft-config

# configure オプション
%define config_opts \
	--host=arm-linux \
	--prefix=%{prefix}

%define x_opts \
	--x-includes=%{x_prefix}/includes \
	--x-libraries=%{x_prefix}/lib

%define install_opts DESTDIR=%{destdir}
