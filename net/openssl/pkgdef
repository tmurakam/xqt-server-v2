#
# OpenSSL
# 

%define ver     0.9.7d
%define rel     1
%define develpkg yes
%site
http://www.openssl.org/source/

%source
openssl-%{ver}.tar.gz
local:arm-linux.patch;patch=1

%define builddir openssl-%{ver}
%define develpkg yes


%prep

%build
./Configure threads zlib shared --prefix=%{prefix} --openssldir=%{prefix}/openssl linux-elf-arm
make

%install
make INSTALL_PREFIX=%{destdir} install

%files
%{prefix}/bin/openssl
%{prefix}/lib/*.so*

%excludes
*.la
*.a

%strip
openssl
*.so*

%control
Package: openssl
Priority: optional
Section: libs
Maintainer: Takuya Murakami <tmurakam@mtd.biglobe.ne.jp>
Architecture: arm
Version: %{ver}-%{rel}
Depends:
License:
Description: OpenSSL library
