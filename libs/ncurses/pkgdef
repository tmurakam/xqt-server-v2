#
# ncurses
# 

%site
http://ring.asahi-net.or.jp/archives/GNU/ncurses/

%source
ncurses-4.2.tar.gz
local:ncurses-4.2.cross.patch;patch=1

%define builddir	ncurses-4.2

%prep
/bin/rm -rf Ada95

%build
# --includedir を指定するとうまく行かない、、、
./configure --host=%{arch} --prefix=%{prefix} --libdir=%{cross_prefix}/lib \
 --with-install-prefix=%{destdir} \
 --without-normal --with-shared --without-profile --without-debug \
 --without-ada --without-progs --without-cxx-binding

make HOSTCC=$CC_FOR_BUILD

%install
make DESTDIR=%{destdir} libdir=%{prefix}/lib install

%define devpkg ncurses

%files
%{prefix}/lib/*.so*

%excludes
*.la
*.a

%strip
*.so*
