%site
ftp://ftp.remotesensing.org/pub/libtiff

%source
tiff-v3.6.1.tar.gz
local:cross.patch;patch=1

%define builddir tiff-v3.6.1

%build
./configure --target=arm-linux
make

%install
make %{install_opts} install

%define devpkg	libtiff

%files
%{prefix}/lib/*.so*

%excludes
*.la
*.a

%strip
*.so*

%control
