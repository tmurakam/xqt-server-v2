%site
http://www.zlib.net/

%source
zlib-1.2.1.tar.gz

%define builddir	zlib-1.2.1

%prep

%build
./configure --prefix=%{prefix} --shared
make

%install
make prefix=%{destdir}%{prefix} install

%define devpkg	zlib

%files
%{prefix}/lib/*

%excludes
*.la
*.a

%strip
*.so*

%control
